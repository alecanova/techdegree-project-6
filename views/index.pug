extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

       
      h1 My Projects

      p.lead.text-light
        | A collection of applications that I developed during my techdegree course with Treehouse.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      
      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.image_urls.thumbnail}`)
            h5 #{project.project_name}
      


      
